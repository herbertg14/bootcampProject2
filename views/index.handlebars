                <option value="WI">WI</option>
                <option value="WY">WY</option>
              </select>
              <label>State</label>
            </div>

          </div>

          <!-- Phone -->
          <div class="row">
            <div class="input-field col s12">
              <input id="phoneInput" type="text" class="validate">
              <label for="phoneInput">Restaurant Phone Number</label>
            </div>
          </div>

          <!-- website -->
          <div class="row">
            <div class="input-field col s12">
              <input id="websiteInput" type="text" class="validate">
              <label for="websiteInput">Restaurant URL</label>
            </div>
          </div>

          <div class="row">
            <div class="switch col s6">
              <h6>Would you like an email reminder sent?</h6>
              <label>
                Off
                <input type="checkbox" id="reminderInput">
                <span class="lever"></span>
                On
              </label>
            </div>
            <div class="col s6">
              <h6>Set reminder date</h6>
              <input id="dateInput" type="date" class="datepicker">
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn waves-effect waves-light" type="submit" name="action" id = "addToDo">Submit <i class="material-icons right">send</i>
      </button>
    </div>
  </div>

</header>

<main>
  <div class="row">
    <div class="col s12 m7 l8" style = "height: 100%; width: 100%" id="googleMaps">
    </div>
  </div>

  <div class="fixed-action-btn modal-trigger" href="#addModal">
