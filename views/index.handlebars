<header>
  <!-- navigation bar -->
  <nav>
    <div class="nav-wrapper">

      <!-- menu todolist icon that is hidden on full screen-->
      <a href="#" data-activates="toDoTab" class="button-collapse"><i class="material-icons">menu</i></a>

      <!-- logo -->
      <a href="#" class="brand-logo center">Eatinerary</a>

      <ul class="right">
        <li><a class="modal-trigger" href="#searchModal"><i class="material-icons">search</i></a></li>

        <!-- option menu icon -->
        <li><a class='dropdown-button' href='#' data-activates='menuDropDown' data-beloworigin="true"><i class="material-icons">more_vert</i></a></li>
      </ul>

      <!-- options menu -->
      <ul id='menuDropDown' class='dropdown-content'>
        <li><a href="/logout">Log out</a></li>
      </ul>
    </div>
  </nav>

  <!-- Sidetab/ todotab -->
  <div id="toDoTab" class="side-nav fixed">
    <div class="brand-logo center"><h4>My Eats</h4><hr></div>
    <ul class="collapsible" data-collapsible="accordion">
      {{#each user}}
      <li>
        <div class="collapsible-header"><i class="material-icons">label</i>{{this.dataValues.title}}</div>
        <div class="collapsible-body" id="commentBody">
            <h3 id="info-title">Restaurant Info</h3>
            <p id="rest-add">Address: {{this.dataValues.address}}</p>
            <p id="rest-city">City: {{this.dataValues.city}}</p>
            <p id="rest-state">State: {{this.dataValues.state}}</p>
            <p id="rest-num">Phone: {{this.dataValues.restaurantPhone}}
            <p id="rest-link">Link: {{this.dataValues.restaurantURL}}</p>
            <p id="rest-comment">Comment: {{this.dataValues.description}}</p>
              <a href = "/myList/deleteItem/{{this.dataValues.id}}" id="deleteButton">Delete Item</a>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>

  <!-- search modal -->
  <div id="searchModal" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h5 id="search-dest">Search places by destination</h5>
      <form class="col s12">

        <!-- keywords -->
