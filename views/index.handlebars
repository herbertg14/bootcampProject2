            </select>
            <label>State</label>
          </div>

        </div>

        <!-- range -->
        <div class="row">
          <div class="col s7">
            <p class="range-field">
              <label for="rangeSearch">Number of results</label>
              <input type="range" id="rangeSearch" min="1" max="20" />
            </p>
          </div>
        </div>

      </form>
    </div>
    <div class="modal-footer">
      <a href="#!" id="searchButton" class="modal-action modal-close waves-effect waves-green btn-flat">Search</a>
    </div>
  </div>

  <!-- add modal -->
