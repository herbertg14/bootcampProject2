    <div class="modal-content">
      <h5 id="addRestHeader">Add a restaurant to your Eatinerary</h5>
      <div class="row">
        <form class="col s12">

          <!-- Restaurant Name -->
          <div class="row">
            <div class="input-field col s12">
              <input id="restaurantNameInput" type="text" class="validate">
              <label for="restaurantNameInput">Restaurant Name</label>
            </div>
          </div>

          <!-- comment -->
          <div class="row">
            <div class="input-field col s12">
              <input id="commentInput" type="text" class="validate">
              <label for="commentInput">Comment</label>
            </div>
          </div>

          <!-- streetAddress -->
          <div class="row">
            <div class="input-field col s12">
              <input id="addressInput" type="text" class="validate">
              <label for="addressInput">Address</label>
            </div>
          </div>

          <!-- City and State -->
          <div class="row">
            <!-- city -->
            <div class="input-field col s6">
              <input id="cityInput" type="text" class="validate">
              <label for="cityInput">City</label>
            </div>
            <!-- state -->
            <div class="input-field col s6">
              <select id = "stateInput">
                <option value="" disabled selected>Choose your option</option>
